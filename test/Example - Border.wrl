EXTERNPROTO RoundedRectangle [
	exposedField  SFVec2f  size
	exposedField  SFFloat  border
	field         SFBool   solid
] "../src/proto.RoundedRectangle.wrl#RoundedRectangle"

PROTO Example [
	exposedField  SFVec3f  translation  0 0 0
	exposedField  SFFloat  border       1
]{
	Transform {
		translation IS translation
		children Shape {
			appearance Appearance {
				material Material {
					diffuseColor 0 0 0
					emissiveColor 0 1 0
				}
			}
			geometry RoundedRectangle {
				size 2 1
				border IS border
			}
		}
	}
}


WorldInfo {
	title "Tests the 'border' property of RoundedRectangle"
}

Viewpoint {
	position 0 -4 12
	orientation 0 1 0 0
	fieldOfView 0.785398
}

Example {
	translation 0 0 0
	border -1
}
Example {
	translation 0 -2 0
	border 0
}
Example {
	translation 0 -4 0
	border 0.25
}
